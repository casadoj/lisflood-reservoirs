file = {:C$\backslash$:/Users/casadje/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Manoli et al. - 2014 - Tree root systems competin for soil moisture in a 3D soil-plant model.pdf:pdf},
issn = {0309-1708},
