issn = {08856087},
journal = {Hydrological Processes},
keywords = {Baseflow separation,Hydrograph,Model validation,Recursive digital filtering},
number = {2},
pages = {507--515},
title = {{How to construct recursive digital filters for baseflow separation}},
volume = {19},
year = {2005}
}
