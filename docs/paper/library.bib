file = {:C$\backslash$:/Users/casadje/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Hrachowitz et al. - 2014 - Process consistency in models The importance of system signatures, expert knowledge, and process complexity.pdf:pdf},
journal = {Water Resources Research},
pages = {7445--7469},
title = {{Process consistency in models: The importance of system signatures, expert knowledge, and process complexity}},
volume = {50},
year = {2014}
}
