file = {:C$\backslash$:/Users/casadje/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Fowler et al. - 2018 - Simulating Runoff Under Changing Climatic Conditions A Framework for Model Improvement.pdf:pdf},
issn = {19447973},
journal = {Water Resources Research},
keywords = {climate change,model improvement,rainfall-runoff modeling},
number = {12},
pages = {9812--9832},
title = {{Simulating Runoff Under Changing Climatic Conditions: A Framework for Model Improvement}},
volume = {54},
year = {2018}
