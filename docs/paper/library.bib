title = {{Verification of forecasts expressed in terms of probability}},
volume = {78},
year = {1950}
}
@article{Perdigao2019,
abstract = {Entropy and Information are key concepts not only in Information Theory, but also in Physics: historically in the fields of Thermodynamics, Statistical and Analytical Mechanics and, more recently, in the field of Information Physics. In this paper we argue that the concepts of Entropy and Information provide a seamless and powerful framework for analysis, knowledge generation, model-building, prediction and decision support in the Earth Sciences. In this regard, these concepts explicitly acknowledge the uncertainty intrinsic to Earth Science problems, and allow integration of information from direct observation, theoretical reasoning and physical principles. We start by demonstrating how the use and interpretation of Entropy and Information coincide in Information Theory, Statistical Thermodynamics and Analytical Mechanics, and how this can be taken advantage of when addressing Earth Science problems in general and hydrological problems in particular. In the second part we discuss how Information Physics provides ways to quantify Information and Entropy from fundamental physical principles. This extends their use to cases where the preconditions to calculate Entropy in the classical manner as an aggregate statistical measure are not met. In the Earth Sciences these preconditions are indeed rarely met, either due to limited observations or far from equilibrium evolving systems, hence Information Physics offers new opportunities for improving the treatment of Earth Science problems.},
author = {Perdig{\~{a}}o, Rui A P and Ehret, Uwe and Knuth, Kevin H and Wang, Jingfeng},
