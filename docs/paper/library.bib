doi = {10.1016/j.jhydrol.2016.12.037},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {High-resolution monitoring,Rural-urban gradient,Stormwater runoff,Water quality,Winter flooding},
month = {feb},
pages = {463--477},
publisher = {Elsevier B.V.},
title = {{During a winter of storms in a small UK catchment, hydrology and water quality responses follow a clear rural-urban gradient}},
volume = {545},
