file = {:C$\backslash$:/Users/casadje/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Mendiguren, Koch, Stisen - 2017 - Spatial pattern evaluation of a calibrated national hydrological model - A remote-sensing-based diagno.pdf:pdf},
issn = {16077938},
journal = {Hydrology and Earth System Sciences},
number = {12},
pages = {5987--6005},
title = {{Spatial pattern evaluation of a calibrated national hydrological model - A remote-sensing-based diagnostic approach}},
