doi = {10.1038/ngeo2868},
file = {:C$\backslash$:/Users/casadje/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/McColl et al. - 2017 - The global distribution and dynamics of surface soil moisture.pdf:pdf},
