file = {:C$\backslash$:/Users/casadje/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Duan, Sorooshian, Gupta - 1992 - Effective and Efficient Global Optimization for Conceptual Rainfall-Runoff Models.pdf:pdf},
journal = {Water Resources Research},
