journal = {Journal of Geophysical Research Atmospheres},
keywords = {VIC model,land surface models,parameter sensitivity},
number = {11},
pages = {1--15},
title = {{Monte Carlo sensitivity analysis of land surface parameters using the Variable Infiltration Capacity model}},
